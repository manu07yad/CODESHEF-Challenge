#include <iostream>
using namespace std;

int main()
{
	int t;
	cin>>t;
	while(t--)
	{
	    int N,A,B;
	    char S[10000];
	    cin>>N>>A>>B;
	    cin>>S;
	    int sum=0;
	    for(int i=0;i<N;i++)
	    { 
	   
	        if(S[i]=='0')
	        {
	            sum=sum + 1*A;
	        }
	        else if (S[i]=='1')
	        {
	            sum=sum + 1*B;
	        }
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
